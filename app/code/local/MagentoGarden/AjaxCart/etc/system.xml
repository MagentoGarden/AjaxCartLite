<?xml version="1.0"?>
<config>
	<tabs>
		<magentogarden translate="label" module="ajaxcart">
			<label>Magento Garden</label>
			<sort_order>99</sort_order>
		</magentogarden>
	</tabs>
	<sections>
		<ajaxcart translate="label" module="ajaxcart">
			<label>Ajax Cart</label>
			<tab>magentogarden</tab>
			<frontend_type>text</frontend_type>
			<sort_order>1</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<general translate="label">
					<label>General</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<enabled>
							<label>Enable Ajax Cart</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model><sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<comment>Turn on/off the Ajax Cart functions.</comment>
						</enabled>
						<jquery>
							<label>Load jQuery embeded in the extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
						</jquery>
						<fancybox>
							<label>Load Fancybox embeded in the extension</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
						</fancybox>
					</fields>
				</general>
				<popup>
					<label>Pop Up Dialog</label>
					<frontend_type>text</frontend_type>
					<sort_order>20</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<thumbnail_width>
							<label>Product Thumbnail Width</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</thumbnail_width>
						<thumbnail_height>
							<label>Product Thumbnail Height</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</thumbnail_height>
					</fields>
				</popup>
			</groups>
		</ajaxcart>
	</sections>
</config>